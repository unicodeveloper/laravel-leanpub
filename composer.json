{
    "name": "unicodeveloper/laravel-leanpub",
    "description": "A Leanpub Package for Laravel 5",
    "keywords": [
        "unicodeveloper",
        "laravel-leanpub",
        "laravel",
        "laravel 5",
        "leanpub",
        "bridge",
        "package",
        "php"
    ],
    "homepage": "https://twitter.com/unicodeveloper",
    "license": "MIT",
    "authors": [
        {
            "name": "unicodeveloper",
            "email": "prosperotemuyiwa@gmail.com",
            "homepage": "https://twitter.com/unicodeveloper",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.3.0",
        "guzzlehttp/guzzle": "~5.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1"
    },
    "autoload": {
        "psr-4": {
            "Unicodeveloper\\Leanpub\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Unicodeveloper\\Leanpub\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
